#include <iostream>
using namespace std;

int main() {
	//code
	int t;
	cin>>t;
	while(t--){
	    int n,sum_l=0,sum_r=0;
	    cin>>n;
	    int arr[n];
	    for(int i=0;i<n;i++){
	        cin>>arr[i];
	        if(i<n/2){
	            sum_l +=arr[i];
	        }
	        else{
	            sum_r +=arr[i];
	        }
	    }
	    cout<<sum_l*sum_r<<endl;
	}
	return 0;
}
